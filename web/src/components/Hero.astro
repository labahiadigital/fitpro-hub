      </div>
    </div>
  </div>
  
  <!-- Stats section -->
  <div class="stats-section">
    <div class="container">
      <div class="stats-grid">
        {stats.map(stat => (
          <div class="stat-item">
            <span class="stat-value gradient-text">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    background: linear-gradient(180deg, var(--color-background-alt) 0%, var(--color-background) 100%);
    position: relative;
    padding-top: 72px;
    overflow: hidden;
  }
  
  .hero-bg-1 {
    position: absolute;
    top: 20%;
    left: 10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(60px);
    animation: float 8s ease-in-out infinite;
  }
  
  .hero-bg-2 {
    position: absolute;
    bottom: 20%;
    right: 10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(102, 126, 234, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    filter: blur(60px);
    animation: float 6s ease-in-out infinite reverse;
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding-block: 4rem;
  }
  
  .badge-emoji {
    margin-right: 0.25rem;
  }
  
  .hero-title {
    font-size: clamp(2.25rem, 6vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    max-width: 900px;
    margin-top: 1.5rem;
    letter-spacing: -0.02em;
  }
  
  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin-top: 1.5rem;
    line-height: 1.7;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .hero-apps {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .app-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    opacity: 0.7;
  }
  
  /* Dashboard Preview */
  .dashboard-preview {
    width: 100%;
    max-width: 1000px;
    margin-top: 4rem;
    perspective: 1000px;
  }
  
  .dashboard-window {
    background: linear-gradient(180deg, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0.02) 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    overflow: hidden;
    transform: rotateX(5deg);
    box-shadow: 0 50px 100px -20px rgba(0, 0, 0, 0.5);
  }
  
  .window-header {
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    padding-inline: 1rem;
    gap: 0.5rem;
  }
  
  .window-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }
  
  .window-dot.red { background: #ff5f57; }
  .window-dot.yellow { background: #febc2e; }
  .window-dot.green { background: #28c840; }
  
  .window-content {
    padding: 2rem;
    min-height: 300px;
    background: linear-gradient(135deg, rgba(45, 45, 60, 0.5) 0%, rgba(30, 30, 45, 0.5) 100%);
  }
  
  .kpi-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }
  
  @media (max-width: 640px) {
    .kpi-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .kpi-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1.25rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .kpi-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }
  
  .kpi-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
  }
  
  .kpi-change {
    font-size: 0.75rem;
  }
  
  .kpi-change.positive {
    color: #10b981;
  }
  
  /* Stats Section */
  .stats-section {
    background: var(--color-background);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding-block: 4rem;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  
  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }
  
  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
  }
  
  .stat-label {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
</style>
