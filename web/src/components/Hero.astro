const stats = [
  { value: '10K+', label: 'Profesionales activos' },
  { value: '500K+', label: 'Sesiones gestionadas' },
  { value: 'â‚¬2M+', label: 'Pagos procesados' },
  { value: '99.9%', label: 'Uptime garantizado' },
];
---

<section class="hero">
  <!-- Background effects -->
  <div class="hero-bg-1"></div>
  <div class="hero-bg-2"></div>
  
  <div class="container">
    <div class="hero-content animate-fade-in-up">
      <span class="badge">
        <span class="badge-emoji">ðŸš€</span>
        La plataforma #1 para profesionales fitness
      </span>
      
      <h1 class="hero-title">
        Gestiona tu negocio fitness 
        <span class="gradient-text">como un profesional</span>
      </h1>
      
      <p class="hero-subtitle">
        Todo lo que necesitas para gestionar clientes, entrenamientos,
        pagos y comunicaciones en una sola plataforma diseÃ±ada para el Ã©xito.
      </p>
      
      <div class="hero-cta">
        <a href={`${appUrl}/register`} class="btn btn-primary btn-lg">
          Empieza Gratis
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
        <a href="#demo" class="btn btn-outline btn-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="5 3 19 12 5 21 5 3"/></svg>
