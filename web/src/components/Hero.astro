          <span>iOS App</span>
        </div>
        <div class="app-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 10v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V10"/><path d="M15 5l2-3"/><path d="M9 5l-2-3"/><rect x="4" y="5" width="16" height="5" rx="1"/></svg>
          <span>Android App</span>
        </div>
      </div>
      
      <!-- Dashboard Preview -->
      <div class="dashboard-preview">
        <div class="dashboard-window">
          <div class="window-header">
            <div class="window-dot red"></div>
            <div class="window-dot yellow"></div>
            <div class="window-dot green"></div>
          </div>
          <div class="window-content">
            <div class="kpi-grid">
              <div class="kpi-card">
                <span class="kpi-label">Ingresos</span>
                <span class="kpi-value">â‚¬8,450</span>
                <span class="kpi-change positive">+12.5%</span>
              </div>
              <div class="kpi-card">
                <span class="kpi-label">Clientes</span>
                <span class="kpi-value">156</span>
                <span class="kpi-change positive">+8.2%</span>
              </div>
              <div class="kpi-card">
                <span class="kpi-label">Sesiones</span>
                <span class="kpi-value">342</span>
